<!DOCTYPE html>
<html lang="sk">
  <head>
    <!-- @baseURL -->
    <base href="{{ basePath() }}" />
    <!-- @meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- @csrf -->
    <meta name="{{ csrf.keys.name }}" content="{{ csrf.name }}" />
    <meta name="{{ csrf.keys.value }}" content="{{ csrf.value }}" />
    <!-- @title -->
    <title>{% block title %}{{ appname }}{% endblock %}</title>
    <!-- @font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Petrona:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <!-- @icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet">
    <!-- @styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
    <link type="text/css" rel="stylesheet" href="assets/css/styles.css?v=0.004">
    {% block styles %}{% endblock %}
    <style>body > p:nth-child(2) {display:none!important;}</style>
  </head>
  <body>
    {% htmlcompress %}
    <main>
      <!-- @header -->
      {% block header %}{% endblock %}
      <!-- @main -->
      {% block main %}{% endblock %}
      <!-- @footer -->
      {% block footer %}{% endblock %}
    </main>
    <!-- @modal -->
    {% block modals %}{% endblock %}
    <!-- @js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script src="assets/js/script.js?v=0.001"></script>
    <script>
    AOS.init(); // Inicializ√°cia AOS
    </script>
    {% block scripts %}{% endblock %}
    {% endhtmlcompress %}
</html>